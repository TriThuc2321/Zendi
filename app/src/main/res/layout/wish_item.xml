<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="9dp">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoe_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/shoe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoe Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shoe_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7UK"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="italic"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/shoe_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoe status"
                android:textColorHighlight="@color/gold"
                android:textSize="12dp"
                android:textStyle="italic"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/shoe_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2500"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text="X"
                    android:textSize="10dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/shoe_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="2"
                    android:textColor="@color/gold"
                    android:textSize="10dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_favorite_24" />
                <Button
                    android:id="@+id/shop_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_round_add_shopping_cart_24"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>