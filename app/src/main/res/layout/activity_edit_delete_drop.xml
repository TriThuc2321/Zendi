<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAccount.edit_deleteDropPackage.edit_deleteDrop">
    <Toolbar
        android:id="@+id/toorbar_editdrop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gold"
        android:subtitleTextColor="@color/black"
        android:title="Edit Drop"
        android:navigationIcon="?attr/homeAsUpIndicator"
        android:titleTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toorbar_editdrop">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout22"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_drop_editdrop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="2dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rcv_drop_editdrop">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Caption: "
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:id="@+id/captiondrop_editdrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Status: "
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:id="@+id/statusdrop_editdrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Drop Number: "
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:inputType="number"
                            android:id="@+id/dropnumber_editdrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Category Number: "
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:inputType="number"
                            android:id="@+id/categorynumber_editdrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Type: "
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <EditText

                            android:id="@+id/typedrop_editdrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"></EditText>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image:"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/imagedrop_editdrop"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/airjodan1"
                            android:scaleType="centerCrop"
                            ></ImageView>
                        <Button
                            android:id="@+id/loadimagedrop_editdrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Load Image Drop  "
                            android:background="@color/black"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"></Button>
                    </LinearLayout>

                </LinearLayout>
            <TextView
                android:id="@+id/textview2222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product List:"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                ></TextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_product_editdrop"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview2222">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcv_product_editdrop"
                android:orientation="horizontal"
                >
                <Spinner
                    android:id="@+id/spinner_productlist_editdrop"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    ></Spinner>
                <Button
                    android:id="@+id/addproductindrop_editdrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Add Product "
                    android:textStyle="bold"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    ></Button>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="2dp"
        android:weightSum="2">

        <Button
            android:id="@+id/savebtn1_editdrop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_black_stroke"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:text="Save"
            android:layout_weight="2"
            ></Button>

    </LinearLayout>


</LinearLayout>