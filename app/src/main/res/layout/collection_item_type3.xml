<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ede3b9">

        <ImageView
            android:id="@+id/img_collection_type3"
            android:layout_width="250dp"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_imageview"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/categorytest2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/nameproduct_collection_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="148dp"
            android:background="@color/white"
            android:padding="5dp"
            android:rotation="-90"
            android:text="ZX 2k BOOTS SHOSES"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/price_collection_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="300dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="2.400.000 VND"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_collection_type3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="336dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:gravity="right"
            android:padding="15dp"
            android:text="SHOP NOW"
            android:textColor="@color/white"
            android:textSize="15dp"

            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>