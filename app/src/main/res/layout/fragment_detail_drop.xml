<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/detail_drop_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dropFragment.DetailDropFragment"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dropWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_drop_collection"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/categorytest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <Button
            android:id="@+id/back_detailfragment"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24_back_detail_drop"
            app:layout_constraintLeft_toLeftOf="@+id/img_drop_collection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_drop_collection"></Button>

        <Button
            android:id="@+id/namedrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:text="ZK 2K ULTRA BOOTS"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/img_drop_collection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_drop_collection">

        </Button>

        <Button
            android:id="@+id/type_drop_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="ORIGINALS"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/img_drop_collection"
            app:layout_constraintTop_toTopOf="@+id/img_drop_collection">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="100dp"

        />
</LinearLayout>