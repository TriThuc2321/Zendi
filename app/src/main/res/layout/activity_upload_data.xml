<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addProductPackage.uploadData">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnloadiamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Image"
        ></Button>

        <Button
            android:id="@+id/btnloaddata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Data"
            ></Button>

        <Button
            android:id="@+id/btngetdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Data"
            ></Button>
        <EditText
            android:id="@+id/position_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ProgressBar>
    <ImageView
        android:id="@+id/img_load"
        android:layout_width="100dp"
        android:layout_height="110dp">
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edit1"
        android:hint="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit2"
        android:hint="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit3"
        android:hint="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit4"
        android:hint="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_imageofnewproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>