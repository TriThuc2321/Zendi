<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAccount.ConfirmRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Welcome to ZENDI"
                android:textAlignment="center"
                android:textColor="#4E4D4D"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15sp"
                android:text="Next, we will send the verify code to your email. Please enter this code to create your account!"
                android:textColor="@color/black"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/num1"
                android:layout_width="50sp"
                android:backgroundTint="@color/zendi_color_yellow"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:layout_marginRight="8sp"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8sp"
                android:backgroundTint="@color/zendi_color_yellow"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/num3"
                android:layout_width="50sp"
                android:maxLength="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/zendi_color_yellow"
                android:layout_marginRight="8sp"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/num4"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8sp"
                android:backgroundTint="@color/zendi_color_yellow"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/num5"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:layout_marginRight="8sp"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/zendi_color_yellow"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/num6"
                android:layout_width="50sp"
                android:maxLength="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:backgroundTint="@color/zendi_color_yellow"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note code"
            android:id="@+id/txtConfirmRegisterNote"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btnResendRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_background_login_register"
            android:paddingLeft="15dp"
            android:text="resend"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnConfirmRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            android:paddingLeft="15dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>