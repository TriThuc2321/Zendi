<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAccount.ChangePassword">

    <LinearLayout
        android:id="@+id/profileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        android:padding="5dp">

        <View
            android:id="@+id/changePasswordTurnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/arrowLeft"
            android:text="CHANGE PASSWORD"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="25sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="OLD PASSWORD"
            android:textColor="@color/zendi_color_yellow"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtChangePassPass0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtChangePassPass0Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Note password"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="25sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="NEW PASSWORD"
            android:textColor="@color/zendi_color_yellow"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtChangePassPass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtChangePassPass1Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Note password"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="25sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="CONFIRM NEW PASSWORD"
            android:textColor="@color/zendi_color_yellow"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtChangePassPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtChangePassPass2Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Note password"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="25sp"
        android:text="Now, we will send a verify code to your registered email"
        android:textColor="@color/black"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="10sp"
        android:textStyle="italic"
        android:id="@+id/changePassEmailTxt"
        android:text="Email"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnChangePassSend"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="25sp"
        android:layout_marginRight="25sp"
        android:background="@drawable/white_background_login_register"
        android:paddingLeft="15dp"
        android:text="send"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/changePasswordLayoutConfirm"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_number_1"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_number_2"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_number_3"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8sp"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_number_4"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8sp"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_number_5"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8sp"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_number_6"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/zendi_color_yellow"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtChangePassNoteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="30sp"
            android:text="Note code"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnChangePassConfirm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>