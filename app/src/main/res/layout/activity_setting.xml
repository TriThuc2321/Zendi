<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAccount.SettingActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profileInfo">
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="PROFILE INFO"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/arrowLeft"
            />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/profileInfo"
            android:background="@drawable/custom_black_stroke"
            android:orientation="vertical"
            android:padding="20dp"
                android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thá»©c"
                    android:textSize="25dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/name"
            android:background="@drawable/custom_black_stroke"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/profileInfo"
                android:background="@drawable/custom_black_stroke"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/locationTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ap An Ninh 2"
                    android:textSize="20dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/location"
            android:background="@drawable/custom_black_stroke"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE OF BIRTH"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/birthdayTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DD / MM / YY"
                    android:textSize="20dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/birthday"
            android:background="@drawable/custom_black_stroke"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GENDER"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/genderTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DD / MM / YY"
                    android:textSize="20dp"
                    />

        </LinearLayout>


        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/black"
            android:text="LOG OUT"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity=""
            />




</RelativeLayout>
