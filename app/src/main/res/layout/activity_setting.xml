<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAccount.SettingActivity"
    android:id="@+id/settingLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileInfo">
                <View
                    android:id="@+id/turnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="PROFILE INFO"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/arrowLeft"
                    />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileInfo">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/custom_black_stroke"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NAME"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/nameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textSize="15dp"
                                    />

                                <EditText
                                    android:id="@+id/nameEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:imeOptions="actionDone"
                                    android:inputType="textAutoComplete"
                                    />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/location"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/name"
                            android:background="@drawable/custom_black_stroke"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="LOCATION"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/locationTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:textSize="15dp"
                                    />

                                <EditText
                                    android:id="@+id/locationEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:visibility="gone"
                                    android:imeOptions="actionDone"
                                    android:inputType="textAutoComplete"

                                    />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthday"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/location"
                            android:background="@drawable/custom_black_stroke"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DATE OF BIRTH"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/birthdayTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DD / MM / YY"
                                    android:textSize="15dp"
                                    />
                                <EditText
                                    android:id="@+id/birthdayEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:inputType="date"
                                    android:imeOptions="actionDone"
                                    />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gender"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/birthday"
                            android:background="@drawable/custom_black_stroke"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="GENDER"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    >

                                        <RadioButton
                                            android:id="@+id/radioButton_male"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Male"
                                            android:textColor="#777676"
                                            android:textSize="15dp"
                                            android:buttonTint="#777676" />

                                        <RadioButton
                                            android:id="@+id/radioButton_female"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Female"
                                            android:textColor="#777676"
                                            android:textSize="15dp"
                                            android:buttonTint="#777676" />

                                        <RadioButton
                                            android:id="@+id/radioButton_other"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Other"
                                            android:textColor="#777676"
                                            android:textSize="15dp"
                                            android:buttonTint="#777676" />
                                </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/size"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/gender"
                            android:background="@drawable/custom_black_stroke"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SIZE"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/sizeTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Size"
                                    android:textSize="15dp"
                                    />
                                <EditText
                                    android:id="@+id/sizeEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:inputType="date"
                                    android:imeOptions="actionDone"
                                    />

                        </LinearLayout>

                        <Button
                            android:id="@+id/saveBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAVE"
                            android:layout_below="@id/size"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:backgroundTint="@color/grey"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:enabled="false"
                            />

                        <Button
                            android:id="@+id/logOutBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/saveBtn"
                            android:backgroundTint="@color/black"
                            android:text="LOG OUT"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:gravity="left"
                            />
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>
